[general]
pythonfile = ~/.offlineimap/offlineimap.py
metadata = ~/.offlineimap/
ui = basic
accounts = Gmail-Inbox, Yahoo
maxsyncaccounts = 4
socktimeout = 900

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

[Account Gmail-Inbox]
localrepository = Gmail-Inbox-Local
remoterepository = Gmail-Inbox-Remote

[Repository Gmail-Inbox-Local]
type = Maildir
localfolders = ~/Mail
folderfilter = lambda name: name in gmail_inbox_l2r
nametrans = lambda name: gmail_inbox_l2r.get(name, 'NoSync-Local')

[Repository Gmail-Inbox-Remote]
type = Gmail
remoteuser = marklee@fortawesome.org
remotepasseval = get_password("mail", "marklee@fortawesome.org")
maxconnections = 1
folderfilter = lambda name: name in gmail_inbox_r2l
nametrans = lambda name: gmail_inbox_r2l.get(name, 'NoSync-Remote')
realdelete = no
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Account Gmail-Others]
localrepository = Gmail-Others-Local
remoterepository = Gmail-Others-Remote
status_backend = sqlite
quick = 20

[Repository Gmail-Others-Local]
type = Maildir
localfolders = ~/Mail
folderfilter = lambda name: name in gmail_others_l2r
nametrans = lambda name: gmail_others_l2r.get(name, 'NoSync-Local')

[Repository Gmail-Others-Remote]
type = Gmail
remoteuser = marklee@fortawesome.org
remotepasseval = get_password("mail", "marklee@fortawesome.org")
maxconnections = 1
folderfilter = lambda name: name in gmail_others_r2l
nametrans = lambda name: gmail_others_r2l.get(name, 'NoSync-Remote')
realdelete = no
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Account Yahoo]
