#!/bin/bash
CHARSET=$1
FILE=$2

echo

timeout 0.1s /bin/bash 2>/dev/null <<EOF
iconv -s -f "${CHARSET}" -t utf-8 "${FILE}" | \
    pandoc -f html -t markdown_strict-raw_html | \
    perl -pe 's/\\\\$//;s/\\\\<(.*?)\\\\>/\1/'
EOF

if [ 0 -ne $? ]; then
    w3m -T text/html -I "${CHARSET}" -O UTF-8 "${FILE}" -dump
fi
